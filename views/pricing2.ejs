    <%- include('partials/_footer'); %>
        <script>
            $(document).ready(function() {
                $('body').on('click', '.renewLimit', function(e) {
                    e.preventDefault();
                    const limit = $(this).parent().prev().find(".limit").val();
                    const nextGenForfaitMontant = $(this).parent().prev().find(".nextGenForfaitMontant").val();
                    const id = $(this).parent().prev().find(".ident").val();
                    const focus = $(this);

                    const url = '/users/renewLimit',
                        type = 'post';
                    $.ajax({
                        url,
                        type,
                        data: {
                            id,
                            limit,
                            nextGenForfaitMontant
                        },
                        success: function(datas) {
                            if (datas.etat) {
                                $.notify({
                                    position: 3,
                                    type: 'success',
                                    duration: 4000,
                                    message: datas.result
                                });
                                focus.parent().hide()
                            } else {
                                $.notify({
                                    position: 3,
                                    type: 'error',
                                    duration: 4000,
                                    message: datas.error
                                });
                            }
                        }
                    });
                });

            });
        </script>

