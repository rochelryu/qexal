                    }
                });




                $('body').on('click', '.updateForfaitInRetrograde', function(e) {
                    e.preventDefault();
                    const id = $(this).attr('data-ref');


                    const url = '/users/updateForfaitInRetrograde',
                        type = 'post';
                    $.ajax({
                        url,
                        type,
                        data: {
                            id
                        },
                        success: function(datas) {
                            if (datas.etat) {
                                $.notify({
                                    position: 3,
                                    type: 'success',
                                    duration: 4000,
                                    message: datas.result
                                });
                            } else {
                                $.notify({
                                    position: 3,
                                    type: 'error',
                                    duration: 4000,
